#!/bin/bash
# Run this to get a shell on the base image so you can run ./build/provision
# manually.

set -e

image="$1"
name=tmp

set -x
docker run \
    --rm \
    --name $name \
    --hostname $name \
    -p 3000:22 \
    -p 3001:3000 \
    -p 3002:3001 \
    -ti \
    --entrypoint /bin/bash \
    $image
